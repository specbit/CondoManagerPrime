@model IEnumerable<CET96_ProjetoFinal.web.Models.UnitOwnerListViewModel>

@{
    ViewData["Title"] = $"Manage Owners for {ViewBag.CondominiumName}";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-primary">Create New Owner</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email / Username</th>
            <th>Phone Number</th>
            <th>Account Status</th>
            <th>Assigned To Unit</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var owner in Model)
            {
                <tr>
                    <td>@owner.FullName</td>
                    <td>@owner.Email</td>
                    <td>@owner.PhoneNumber</td>
                    <td>
                        @if (!owner.IsActive)
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                        else if (!owner.IsConfirmed)
                        {
                            <span class="badge bg-warning text-dark">Pending Confirmation</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td>
                        @if (owner.IsAssigned)
                        {
                            <span class="badge bg-primary">Assigned</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Available</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@owner.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@owner.Id" class="btn btn-sm btn-warning">Edit</a>

                        @if (!owner.IsActive)
                        {
                            <form asp-action="ActivateOwner" asp-route-id="@owner.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-success">Activate</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="DeactivateOwner" asp-route-id="@owner.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Deactivate</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No unit owners have been created for this condominium yet.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    @if (User.IsInRole("Company Administrator"))
    {
        <a asp-controller="Condominiums"
           asp-action="CondominiumDashboard"
           asp-route-id="@ViewBag.CondominiumId"
           class="btn btn-secondary">Back to Condominium Dashboard</a>
    }
    else
    {
        <a asp-controller="Home"
           asp-action="Index"
           class="btn btn-secondary">Back to Dashboard</a>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}