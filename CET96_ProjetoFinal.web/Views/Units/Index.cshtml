@model IEnumerable<CET96_ProjetoFinal.web.Models.UnitViewModel>

@{
    ViewData["Title"] = $"Manage Units for {ViewBag.CondominiumName}";
}

@{
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<h1>Manage Units for <strong>@ViewBag.CondominiumName</strong></h1>

<p>
    <a asp-action="Create" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-primary">Create New Unit</a>
    <a asp-action="InactiveUnits" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-warning">View Inactive Units</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Unit Number</th>
            <th>Owner</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var unit in Model)
            {
                <tr>
                    <td>@unit.UnitNumber</td>

                    <td>@unit.OwnerName</td>

                    <td>
                        @if (unit.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@unit.Id" class="btn btn-sm btn-warning">Edit</a>

                        @* --- INTELLIGENT BUTTON LOGIC --- *@
                        @if (string.IsNullOrEmpty(unit.OwnerId))
                        {
                            // If there is NO owner, show the "Assign Owner" button
                            <a asp-action="AssignOwner" asp-route-id="@unit.Id" class="btn btn-sm btn-info">Assign Owner</a>
                        }
                        else
                        {
                            // If an owner EXISTS, show the "Dismiss Owner" button
                            <a asp-action="DismissOwner" asp-route-id="@unit.Id" class="btn btn-sm btn-secondary">Dismiss Owner</a>
                        }

                        <form asp-action="Delete" asp-route-id="@unit.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Deactivate</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No units have been added yet.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @if (User.IsInRole("Company Administrator"))
    {
        // If the user is an Admin, the button goes back to the list of condominiums.
        <a asp-controller="Condominiums"
           asp-action="Index"
           asp-route-id="@ViewBag.CompanyId"
           class="btn btn-secondary">Back to Condominiums</a>
    }
    else
    {
        // If the user is a Manager, the button goes back to their main homepage.
        <a asp-controller="Home"
           asp-action="Index"
           class="btn btn-secondary">Back to Dashboard</a>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}