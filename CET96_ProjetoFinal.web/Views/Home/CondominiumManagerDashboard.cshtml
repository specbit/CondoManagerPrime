@model CET96_ProjetoFinal.web.Models.CondominiumManagerDashboardViewModel

@{
    ViewData["Title"] = "Condominium Manager Dashboard";
}

<div class="container mb-4">
    <h1 class="display-4">Condominium Manager Dashboard</h1>
    <p class="lead">Manage your condominium and staff.</p>
    <hr />
    <h2>@Model.Condominium.Name</h2>
    <p>Address: @Model.Condominium.Address</p>

    <div class="mt-4">
        <a asp-controller="CondominiumStaff" asp-action="Create" asp-route-condominiumId="@Model.Condominium.Id" class="btn btn-primary">New Staff Member</a>
        <a asp-controller="CondominiumStaff" asp-action="Index" asp-route-condominiumId="@Model.Condominium.Id" class="btn btn-secondary">Manage Staff</a>

        <a asp-controller="Messages" asp-action="Index" class="btn btn-dark">Message Center</a>
    </div>

    <hr />

    <div class="card">
        <div class="card-header"><h5 class="mb-0">Condominium Staff</h5></div>
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Profession</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model.Staff)
                    {
                        <tr>
                            <td>@staff.FirstName @staff.LastName</td>
                            <td>@staff.Email</td>
                            <td>@staff.Profession</td>
                            <td>
                                @if (staff.DeactivatedAt.HasValue)
                                {
                                    <span class="badge bg-danger">Deactivated</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-controller="CondominiumStaff" asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-sm btn-warning">Edit</a>
                                @if (staff.DeactivatedAt.HasValue)
                                {
                                    <form asp-controller="CondominiumStaff" asp-action="Activate" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@staff.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">Activate</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="CondominiumStaff" asp-action="Deactivate" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@staff.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Deactivate</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>