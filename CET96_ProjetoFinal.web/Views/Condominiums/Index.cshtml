@model IEnumerable<CET96_ProjetoFinal.web.Models.CondominiumDetailsViewModel>
@{
    ViewData["Title"] = "Condominiums";
}

<div class="container mb-4">
    <h1 class="display-4">Condominiums</h1>
    <p class="lead">Manage the condominiums for this company from the cards below.</p>
    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Company Dashboard</a>
        <a asp-action="Create" asp-route-id="@ViewBag.CompanyId" class="btn btn-primary">Create New Condominium</a>
        <a asp-action="InactiveCondominiums" asp-route-id="@ViewBag.CompanyId" class="btn btn-outline-secondary">View Inactive</a>
        <a asp-controller="Account"
           asp-action="AllUsersByCompany"
           asp-route-id="@ViewBag.CompanyId"
           class="btn btn-dark">Manage Staff & Managers</a>

    </p>
</div>
<hr />

@if (Model.Any())
{
    <div class="row">
        @foreach (var condominium in Model)
        {
            <div class="col-md-4 mb-4">
                @* This link wraps the entire card, making it clickable *@
                <a href="@Url.Action("CondominiumDashboard", "Condominiums", new { id = condominium.Id })" class="card-link" style="text-decoration:none; color:inherit;">
                    <div class="card position-relative">
                        @* <-- Add position-relative *@
                        <div class="card-body">

                            @if (condominium.IsActive)
                            {
                                <span class="position-absolute top-0 end-0 m-2 badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 end-0 m-2 badge bg-danger">Inactive</span>
                            }

                            <p class="card-text pt-2">
                                @* Added padding-top to make space for the badge *@
                                <strong>Condominium:</strong> @condominium.Name<br />
                                <strong>Address:</strong> @condominium.Address<br />
                                <strong>Units:</strong> @condominium.UnitsCount<br />
                                <strong>Manager:</strong> @condominium.ManagerFullName
                                @if (!string.IsNullOrEmpty(condominium.ManagerEmail))
                                {
                                    <small class="text-muted">(@condominium.ManagerEmail)</small>
                                }
                            </p>
                            <a asp-action="Details" asp-route-id="@condominium.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@condominium.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@condominium.Id" class="btn btn-sm btn-danger">Deactivate</a>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="text-center mt-5">
        <h3>This company has no condominiums created yet.</h3>
        <p>You can create the first one by clicking the "Create New Condominium" button above.</p>
    </div>
}
@section Scripts {
    <style>
        .card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>
}